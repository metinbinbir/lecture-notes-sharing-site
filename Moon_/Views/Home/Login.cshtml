@model StudentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/login_.css" type="text/css" />
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
    <div class="row">
        <form class="form-horizontal" id="loginForm" method="post">
            <img src="~/StudentStyles/images/student_icon.jpg" /><br />
            <div class="form-group">
                <label class="col-sm-2 control-label">User Name</label>
                <div class="col-sm-10">
                    <span asp-validation-for="id" class="text-danger"></span>
                    <input asp-for="id" class="form-control" id="title" />
                </div>
            </div>
            <br><br>
            <div class="form-group">
                <label class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <span asp-validation-for="password" class="text-danger"></span>
                    <input asp-for="password" class="form-control" id="title" />
                </div>
            </div>
            <div class="form-group-sm">
                <div class="col-md-offset-2 col-sm-10">
                    <input id="submitBtn" type="submit" class="btn btn-default" value="Log in" />
                </div>
            </div>
            <div style="margin-top: 150px;" class="form-group">
                <label class="col-sm-2 control-label">Don't have an account?</label>
                <div class="col-sm-10">
                    <input type="button" class="btn btn-primary" style="margin-bottom:40px" value="Create new Account" onclick="window.location.href = '@Url.Action("Register", "Home")';" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>
